<% include header %>
    <div class="site-main-container">
        <!-- Start top-post Area -->
        <section class="top-post-area pt-10">
            <div class="container no-padding">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="hero-nav-area">
                            <h1 class="text-white">
                                <%=TheLoai2%>
                            </h1>
                            <p class="text-white link-nav"><a href="/">Home </a> <span class="lnr lnr-arrow-right"></span>
                                <a href="/<%=TheLoai2%>">
                                    <%=TheLoai2%>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End top-post Area -->
        <!-- Start latest-post Area -->
        <section class="latest-post-area pb-120">
            <div class="container no-padding">
                <div class="row">
                    <div class="col-lg-8 post-list">
                        <!-- Start latest-post Area -->
                        <div class="latest-post-wrap">
                            <h4 class="cat-title">
                                <%=TheLoai2%>
                            </h4>
                            <% data.forEach(function(i){%>
                                <div class="single-latest-post row align-items-center">
                                    <div class="col-lg-5 post-left">
                                        <div class="feature-img relative">
                                            <div class="overlay overlay-bg"></div>
                                            <img class="img-fluid" src="<%= i.AnhDaiDien%>" alt="Card image cap">
                                        </div>
                                        <ul class="tags">
                                            <li>
                                                <a href="/ChuDe/<%=i.TenChuDe%>">
                                                    <%= i.TenChuDe%>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-lg-7 post-right">
                                        <a href="/BaiViet/<%=i.ID%>">
                                            <h4>
                                                <%= i.TieuDe%>
                                            </h4>
                                        </a>
                                        <ul class="meta">
                                            <li><a href="#"><span class="lnr lnr-user"></span><%=i.TacGia%></a></li>
                                            <li id="tr"><a href="#"><span class="lnr lnr-calendar-full"></span><%=i.GioDang%></a>
                                            </li>

                                            <li><a href="#"><span class="lnr lnr-eye"></span><%=i.SoLuotXem%></a></li>
                                        </ul>
                                        <p class="excert">
                                            <%= i.TomTat%>
                                        </p>
                                        <p>
                                            <a href="html/Tags_01.html" class="badge badge-primary">Primary</a>
                                            <a href="html/Tags_02.html" class="badge badge-secondary">Secondary</a>
                                            <a href="html/Tags_03.html" class="badge badge-success">Success</a>
                                            <a href="html/Tags_04.html" class="badge badge-danger">Danger</a>
                                            <a href="html/Tags_05.html" class="badge badge-warning">Warning</a>

                                        </p>
                                    </div>
                                </div>
                                <%});%>



                                    </br>
                                    <nav aria-label="Page navigation example">

                                        <ul class="pagination justify-content-center">
                                            <li class="page-item">
                                                <a class="page-link" href="/<%=TheLoai2%>/show=<%=show-1%>" tabindex="-1">Previous</a>
                                            </li>
                                            <li class="page-item"><a class="page-link" href="/<%=TheLoai2%>/show=<%=show%>"><%=show%></a></li>
                                            <%if(data.length < 3){%>
                                                <li class="page-item disabled"><a class="page-link" href="#"><%=show+1%></a></li>
                                                <li class="page-item disabled"><a class="page-link" href="#"><%=show+2%></a></li>
                                                <li class="page-item">
                                                        <a class="page-link" href="#">Next</a>
                                                    </li>
                                            <%}else{%>
                                                <li class="page-item"><a class="page-link" href="/<%=TheLoai2%>/show=<%=show+1%>"><%=show+1%></a></li>
                                                <li class="page-item"><a class="page-link" href="/<%=TheLoai2%>/show=<%=show+2%>"><%=show+2%></a></li>
                                                <li class="page-item">
                                                        <a class="page-link" href="/<%=TheLoai2%>/show=<%=show+1%>">Next</a>
                                                    </li>
                                            <%}%>
                                  
                                           
                                           
                                        </ul>
                                    </nav>

                        </div>
                        <!-- End latest-post Area -->
                    </div>
                    <div class="col-lg-4">
                        <div class="sidebars-area">
                            <% include XemNhieu %>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        <!-- End latest-post Area -->
    </div>

    <!-- start footer Area -->
    <% include footer %>