    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="../../css/pe-icon-7-stroke.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="../../css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../css/AdminLTE.min.css">


</head>

<body>

    <div class="wrapper">
        <div class="sidebar" data-color="red" data-image="assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="http://www.creative-tim.com" class="simple-text">
                        Creative Tim
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="/admin/dashboard/1">
                            <i class="pe-7s-graph"></i>
                            <p>Trang Chủ</p>
                        </a>
                    </li>
                    <li>

                        <a href="/admin/NguoiDung/1">
                            <i class="pe-7s-user"></i>
                            <p>Danh Sách Người Dùng</p>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/BaiViet/show=1">
                            <i class="pe-7s-note2"></i>
                            <p>Quản Lý Bài Viết</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/admin/ChuyenMuc/1">
                            <i class="pe-7s-news-paper"></i>
                            <p>Quản Lý Chuyên Mục</p>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/Tags/1">
                            <i class="pe-7s-science"></i>
                            <p>Quản Lý Tags</p>
                        </a>
                    </li>


                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">

                        <a class="navbar-brand" href="/admin/ChuyenMuc/1">Quản Lý Chuyên Mục</a>
                    </div>
                    <div class="collapse navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/admin/account/1">
                                    <p>Account</p>
                                </a>
                            </li>

                            <li>
                                <a href="#">
                                    <p>Log out</p>
                                </a>

                            </li>
                            <li class="separator hidden-lg"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Chuyên Mục Cấp 1</h4>
                                </div>
                                <div class="content table-responsive table-full-width">
                                    <div class="row">
                                        <div class="col-sm-10">
                                            <div id="example1_filter" class="dataTables_filter"><label>Search:
                                                    <input type="search" placeholder=""
                                                        aria-controls="example1"></label></div>
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="document.getElementById('ThemTL').style.display='block'" type="button" rel="tooltip" title="Add" class="btn btn-simple btn-xs">
                                                Thêm<i class="fa fa-plus"></i>
                                            </button>

                                        </div>

                                    </div>
                                    <table id="tableTheLoai" class="table table-hover table-striped">
                                        <thead>
                                            <th>ID</th>
                                            <th>Chuyên Mục Cấp 1</th>
                                            <th>Xóa/Cập Nhật</th>
                                        </thead>
                                        <tbody>
                                            <%TheLoai.forEach(function(item){%>
                                                <tr>
                                                    <td>
                                                        <%=item.ID%>
                                                    </td>
                                                    <td>
                                                        <%=item.TenTheLoai%>
                                                    </td>
                                                    <td><a onclick="return confirm('Bạn Có Chắc Chắn Muốn Xóa')" href="/admin/deleteTenTheLoai/<%=item.ID%>" type="button" rel="tooltip" title="Remove" class="btn btn-simple btn-xs">
                                                        <i class="fa fa-times"></i>
                                            </a>
                                                        <button id="btnSua" onclick="document.getElementById('SuaTheLoai').style.display='block'" type="button" rel="tooltip" title="Edit Task" class="btn btn-simple btn-xs">
                                                            <i class="fa fa-edit"></i>
                                                        </button>
                                                    </td>
                                                    <% })%>
                                                </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Chuyên Mục Cấp 2</h4>
                                </div>
                                <div class="content table-responsive table-full-width">
                                    <div class="row">
                                        <div class="col-sm-10">
                                            <div id="example1_filter" class="dataTables_filter"><label>Search:
                                                    <input type="search" placeholder=""
                                                        aria-controls="example1"></label></div>
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="document.getElementById('ThemCD').style.display='block'" type="button" rel="tooltip" title="Add" class="btn btn-simple btn-xs">
                                                Thêm<i class="fa fa-plus"></i>
                                            </button>

                                        </div>

                                    </div>
                                    <table id="tableChuDe" class="table table-hover table-striped">
                                        <thead>
                                            <th>ID</th>
                                            <th>Chuyên Mục Cấp 2</th>
                                            <th>ID Chuyên Mục Cấp 1</th>
                                            <th>Xóa/Cập Nhật</th>
                                        </thead>
                                        <tbody>
                                            <%ChuDe.forEach(function(item){%>
                                                <tr>
                                                    <td>
                                                            <%=item.ID%>
                                                    </td>
                                                    <td>
                                                            <%=item.TenChuDe%>
                                                    </td>
                                                    <td>
                                                            <%=item.IDTheLoai%>
                                                      
                                                    </td>
                                                   
                                                    <td><a onclick="return confirm('Bạn Có Chắc Chắn Muốn Xóa')" href="/admin/deleteTenChuDe/<%=item.ID%>" type="button" rel="tooltip" title="Remove" class="btn btn-simple btn-xs">
                                                                <i class="fa fa-times"></i>
                                                    </a>
                                                        <button id="btnSua" onclick="document.getElementById('SuaChuDe').style.display='block'" type="button" rel="tooltip" title="Edit Task" class="btn btn-simple btn-xs">
                                                            <i class="fa fa-edit"></i>
                                                        </button>
                                                    </td>
                                                    <% })%>
                                                </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <div id="ThemTL" class="modal">
                            <div class="content">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <span onclick="document.getElementById('ThemTL').style.display='none'" class="close" title="Close Modal">&times;</span>
                                                <div class="header">
                                                    <h4 class="title">Thêm</h4>

                                                </div>
                                                <div class="content">
                                                    <form action="/admin/addTenTheLoai" method="post" novalidate id="AddTheLoai">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Tên Thể Loại</label>
                                                                    <input type="text" class="form-control" name="addTenTheLoai" placeholder="Thể Thao">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="btn btn-info btn-fill pull-right">Thêm </button>
                                                        <div class="clearfix"></div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        
                        </div>
                        <div id="ThemCD" class="modal">
                                <div class="content">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <span onclick="document.getElementById('ThemCD').style.display='none'" class="close" title="Close Modal">&times;</span>
                                                    <div class="header">
                                                        <h4 class="title">Thêm</h4>
    
                                                    </div>
                                                    <div class="content">
                                                        <form action="/admin/addTenChuDe" method="post" novalidate id="AddChuDe">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="form-group">
                                                                        <label>Tên Chủ Đề</label>
                                                                        <input type="text" class="form-control" name="addTenChuDe" placeholder="Thể Thao Việt Nam">
                                                                    </div>
                                                                    <div class="form-group">
                                                                            <label>ID Chuyên Mục Cấp 1</label>
                                                                            <select class="custom-select" name="addIDTheLoai">
                                                                                    <%TheLoai.forEach(function(item){%>
                                                                                        <option value="<%=item.ID%>"><%=item.ID %>:<%=item.TenTheLoai%></option>
                                                                                    <%})%>
                                                                            </select>
                                                                        </div>
                                                                       
                                                                </div>
                                                            </div>
                                                            <button type="submit" class="btn btn-info btn-fill pull-right">Thêm </button>
                                                            <div class="clearfix"></div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
    
                                        </div>
                                    </div>
                                </div>
                            
                        </div>
                        <div id="SuaChuDe" class="modal">
                            <div class="content">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <span onclick="document.getElementById('SuaChuDe').style.display='none'" class="close" title="Close Modal">&times;</span>
                                                <div class="header">
                                                    <h4 class="title">Sửa</h4>

                                                </div>
                                                <div class="content">
                                                    <form action="/admin/editChuDe" method="post" novalidate id="AddTheLoai">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Tên Chủ Đề</label>
                                                                    <input id="TenChuDe" type="text" class="form-control" name="EditTenChuDe" placeholder="Thể Thao">
                                                                    <input id="IDChuDe" type="hidden" class="form-control" name="IDChuDe" placeholder="Thể Thao">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>ID Chuyên Đề Cấp 1</label>
                                                                    <input id="IDTenTheLoai" type="number" class="form-control" name="EditIDTenTheLoai" placeholder="Thể Thao Việt Nam">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="btn btn-info btn-fill pull-right">Sửa</button>
                                                        <div class="clearfix"></div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="SuaTheLoai" class="modal">
                            <div class="content">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <span onclick="document.getElementById('SuaTheLoai').style.display='none'" class="close" title="Close Modal">&times;</span>
                                                <div class="header">
                                                    <h4 class="title">Sửa</h4>

                                                </div>
                                                <div class="content">
                                                    <form action="/admin/editTheLoai" method="post" novalidate id="AddTheLoai">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Tên Thể Loại</label>
                                                                    <input id="TenTheLoai" type="text" class="form-control" name="EditTenTheLoai" placeholder="Thể Thao">
                                                                    <input id="IDTheLoai" type="hidden" class="form-control" name="IDTheLoai" placeholder="Thể Thao">
                                                                </div>
                                                                
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="btn btn-info btn-fill pull-right">Sửa</button>
                                                        <div class="clearfix"></div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
    </div>

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script>
        $('#tableChuDe #btnSua').click(function(e) {
            /* e.preventDefault();*/
            $('#IDTenTheLoai').val($(this).closest('tr').find('td:nth-child(3)').text().trim()); //Lấy value cột thứ nhất
            $('#TenChuDe').val($(this).closest('tr').find('td:nth-child(2)').text().trim()); 
            $('#IDChuDe').val($(this).closest('tr').find('td:nth-child(1)').text().trim());
        });
        $('#tableTheLoai #btnSua').click(function(e) {
            /* e.preventDefault();*/
            $('#IDTheLoai').val($(this).closest('tr').find('td:nth-child(1)').text().trim());
             $('#TenTheLoai').val($(this).closest('tr').find('td:nth-child(2)').text().trim()); //Hoặc lấy giá trị cột thứ 2
        });
    </script>

    <script src="../../js/bootstrap.min.js" type="text/javascript"></script>


    <!--  Notifications Plugin    -->
    <script src="../../js/bootstrap-notify.js"></script>


    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="../../js/light-bootstrap-dashboard.js?v=1.4.0"></script>

    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="../../js/demo.js"></script>
</body>


</html>