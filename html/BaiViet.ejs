<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Quản Lý Bài Viết</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="../../css/animate.min.css" rel="stylesheet" />
    <!--  Light Bootstrap Table core CSS    -->
    <link href="../../css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />
    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="../../css/demo.css" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="../../css/pe-icon-7-stroke.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="../../css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../css/AdminLTE.min.css">


</head>

<body>

    <div class="wrapper">
        <div class="sidebar" data-color="red" data-image="assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="http://www.creative-tim.com" class="simple-text">
                        Creative Tim
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="/admin/dashboard/1">
                            <i class="pe-7s-graph"></i>
                            <p>Trang Chủ</p>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/NguoiDung/1">
                            <i class="pe-7s-user"></i>
                            <p>Danh Sách Người Dùng</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/admin/BaiViet/show=1">
                            <i class="pe-7s-note2"></i>
                            <p>Quản Lý Bài Viết</p>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/ChuyenMuc/1">
                            <i class="pe-7s-news-paper"></i>
                            <p>Quản Lý Chuyên Mục</p>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/Tags/1">
                            <i class="pe-7s-science"></i>
                            <p>Quản Lý Tags</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">

                        <a class="navbar-brand" href="/admin/BaiViet/show=1">Quản Lý Bài Viết</a>
                    </div>
                    <div class="collapse navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/admin/account/1">
                                    <p>Account</p>
                                </a>
                            </li>

                            <li>
                                <a href="#">
                                    <p>Log out</p>
                                </a>
                            </li>
                            <li class="separator hidden-lg"></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Danh Sách Các Bài Báo</h4>

                                </div>
                                <div class="content table-responsive table-full-width">
                                    <div class="row">
                                        <div class="col-sm-10">
                                            <div id="example1_filter" class="dataTables_filter"><label>Search:
                                                    <input type="search" placeholder=""
                                                        aria-controls="example1"></label></div>
                                        </div>
                                    </div>
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <th>News ID</th>
                                            <th>Tiêu Đề</th>
                                            <th>Tác Giả</th>
                                            <th>Chuyên Mục</th>
                                            <th>Nhãn Tag</th>
                                            <th>Ngày Đăng</th>
                                            <th>Tình Trạng</th>
                                        </thead>
                                        <tbody>
                                            <%BaiViet.forEach(function(item){%>
                                                <tr>
                                                    <td>
                                                        <a href="#">
                                                            <%=item.ID%>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%=item.TieuDe%>
                                                    </td>
                                                    <th>
                                                        <%=item.TacGia%>
                                                    </th>
                                                    <td>
                                                        <%=item.ChuDe%>
                                                    </td>
                                                    <td>#SonTung, #Vpop</td>
                                                    <td>
                                                        <%=item.GioDang%>
                                                    </td>
                                                    <%if(item.TrangThai==1){%>
                                                        <td><span class="label label-success">Xuất Bản</span></td>
                                                        <% }else if(item.TrangThai==2){%>
                                                            <td><span class="label label-danger">Draft</span></td>
                                                            <%  }%>
                                                </tr>
                                                <%})%>


                                        </tbody>
                                    </table>

                                </div>

                            </div>
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">

                                    <li class="page-item ">
                                        <a class="page-link" href="/admin/BaiViet/show=<%=show-1%>" tabindex="0">Previous</a>
                                    </li>

                                    <li class="page-item active">
                                        <a class="page-link" href="/admin/BaiViet/show=<%=show%>">
                                            <%=show%>
                                        </a>
                                    </li>
                                    <%if(BaiViet.length < 5){%>
                                        <li class="page-item disabled">
                                            <%}else{%>
                                                <li class="page-item">
                                                    <%}%>
                                                        <a class="page-link" href="/admin/BaiViet/show=<%=show+1%>">
                                                            <%=show+1%>
                                                        </a>
                                                </li>
                                                <%if(BaiViet.length < 5){%>
                                                    <li class="page-item disabled">
                                                        <%}else{%>
                                                            <li class="page-item">
                                                                <%}%>

                                                                    <a class="page-link" href="/admin/BaiViet/show=<%=show+2%>">
                                                                        <%=show+2%>
                                                                    </a>
                                                            </li>
                                                            <%if(BaiViet.length < 5){%>
                                                                <li class="page-item disabled">
                                                                    <%}else{%>
                                                                        <li class="page-item">
                                                                            <%}%>
                                                                                <a class="page-link" href="/admin/BaiViet/show=<%=show+1%>">Next</a>


                                                                        </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
    <script src="../../js/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="../../js/bootstrap.min.js" type="text/javascript"></script>

    <!--  Notifications Plugin    -->
    <script src="../../js/bootstrap-notify.js"></script>


    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="../../js/light-bootstrap-dashboard.js?v=1.4.0"></script>

    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="../../js/demo.js"></script>
</body>




</html>