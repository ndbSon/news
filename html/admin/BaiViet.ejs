<% include headeradmin %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Danh Sách Các Bài Báo</h4>

                        </div>
                        <div class="content table-responsive table-full-width">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div id="example1_filter" class="dataTables_filter"><label>Search:
                                                    <input type="search" placeholder=""
                                                        aria-controls="example1"></label></div>
                                </div>
                            </div>
                            <table id="table" class="table table-hover table-striped">
                                <thead>
                                    <th>News ID</th>
                                    <th>Tiêu Đề</th>
                                    <th>Tác Giả</th>
                                    <th>Chuyên Mục</th>
                                    <th>Nhãn Tag</th>
                                    <th>Ngày Đăng</th>
                                    <th>Tình Trạng</th>
                                    <th></th>
                                </thead>
                                <tbody>
                                    <%BaiViet.forEach(function(item){%>
                                        <tr onclick="document.getElementById('XemChiTiet').style.display='block'">
                                            <td>
                                                <%=item.ID%>
                                            </td>
                                            <td>
                                                <%=item.TieuDe%>
                                            </td>
                                            <td>
                                                <%=item.TacGia%>
                                            </td>
                                            <td>
                                                <%=item.ChuDe%>
                                            </td>
                                            <td>#SonTung, #Vpop</td>
                                            <td>
                                                <%=item.GioDang%>
                                            </td>
                                            <%if(item.TrangThai==1){%>
                                                <td><span class="label label-success ">Đã xuất bản</span></td>
                                                <%}else if(item.TrangThai==2){%>
                                                    <td><span class="label label-primary ">Đã được duyệt & chờ xuất
                                                        bản</span></td>

                                                    <% }%>
                                                        <td>
                                                            <input type="hidden" value="<%=item.NoiDung%>">
                                                        </td>
                                        </tr>
                                        <%})%>


                                </tbody>
                            </table>

                        </div>

                    </div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">

                            <li class="page-item ">
                                <a class="page-link" href="/admin/BaiViet/show=<%=show-1%>" tabindex="0">Previous</a>
                            </li>

                            <li class="page-item active">
                                <a class="page-link" href="/admin/BaiViet/show=<%=show%>">
                                    <%=show%>
                                </a>
                            </li>
                            <%if(BaiViet.length < 5){%>
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">
                                        <%=show+1%>
                                    </a>
                                </li>
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">
                                        <%=show+2%>
                                    </a>
                                </li>
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                                <%}else{%>
                                    <li class="page-item">
                                        <a class="page-link" href="/admin/BaiViet/show=<%=show+1%>">
                                            <%=show+1%>
                                        </a>
                                    </li>
                                    <li class="page-item">

                                        <a class="page-link" href="/admin/BaiViet/show=<%=show+2%>">
                                            <%=show+2%>
                                        </a>

                                    </li>
                                    <li class="page-item">

                                        <a class="page-link" href="/admin/BaiViet/show=<%=show+1%>">Next</a>
                                    </li>

                                    <%}%>




                        </ul>
                    </nav>


                </div>
            </div>
        </div>
    </div>

    <div id="XemChiTiet" class="modal">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <span onclick="document.getElementById('XemChiTiet').style.display='none'" class="close" title="Close Modal">&times;</span>
                            <div class="header">
                                <h4 class="title">Duyệt Bài Viết</h4>
                            </div>
                            <div class="content">
                                <form action="/admin/BTVDuyetBaiViet" method="POST">
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Ngày Đăng</label>
                                                <input id="NgayDang" type="text" class="form-control" placeholder="Ngày Đăng">
                                                <input id="IDBaiViet" name="IDBaiViet" type="hidden" class="form-control" placeholder="Ngày Đăng">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Chủ Đề</label>
                                                <input id="ChuDe" type="text" class="form-control" placeholder="Thể Loại">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Tiêu Đề</label>
                                                <input id="TieuDe" type="text" class="form-control" placeholder="Tiêu Đề">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Nội Dung</label>
                                                <textarea id="NoiDung" rows="25" name="NoiDung" class="form-control" placeholder="Nội Dung">
                                                              </textarea>
                                                <script>
                                                    // Replace the <textarea id="editor1"> with a CKEditor
                                                    // instance, using default configuration.
                                                    CKEDITOR.replace('NoiDung');
                                                </script>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="Duyet" id="inlineRadio1" value="4">
                                                    <label class="form-check-label" for="inlineRadio1">Loại</label>
                                                </div>


                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="Duyet" id="inlineRadio2" value="1">
                                                    <label class="form-check-label" for="inlineRadio2">Duyệt</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-info btn-fill pull-right">Duyệt</button>


                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <%include footeradmin%>