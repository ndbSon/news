                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <span onclick="document.getElementById('Them').style.display='none'" class="close" title="Close Modal">&times;</span>
                                                <div class="header">
                                                    <h4 class="title">Thêm</h4>
                                                </div>
                                                <div class="content">
                                                    <form action="#" method="post" novalidate id="AddTags">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Tên Tags</label>
                                                                    <input type="text" class="form-control" name="addTenTags" placeholder="Thể Thao">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>ID Bài Viết Gắn tags</label>
                                                                    <input type="number" class="form-control" name="IDBaiViet" placeholder="Thể Thao">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="btn btn-info btn-fill pull-right">Thêm </button>
                                                        <div class="clearfix"></div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        
                        </div>
