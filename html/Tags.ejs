<script>
    $('#table #btnSua').click(function(e) {
        /* e.preventDefault();*/
        $('#EditTenTags').val($(this).closest('tr').find('td:nth-child(2)').text()); //Lấy value cột thứ nhất
        $('#IDTags').val($(this).closest('tr').find('td:nth-child(1)').text().trim()); 
        
    });
</script>
