<body>

    <div class="wrapper">
        <div class="sidebar" data-color="red" data-image="assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/PV_BTV/BTV" class="simple-text">
                       SQ-News
                    </a>
                </div>

                <ul class="nav">

                    <li>
                        <a href="/PV_BTV/BTV">
                            <i class="pe-7s-user"></i>
                            <p>Biên Tập Viên</p>
                        </a>
                    </li>


                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">

                        <a class="navbar-brand" href="/PV_BTV/BTV">Biên Tập Viên</a>
                    </div>
                    <div class="collapse navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/account/account">
                                    <p>Account</p>
                                </a>
                            </li>

                            <li>
                                <a href="/account/logout">
                                    <p>Log out</p>
                                </a>
                            </li>
                            <li class="separator hidden-lg"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Danh Sách Bài Báo Nháp</h3>

                        <div class="box-tools">

                            <div class="input-group input-group-sm" style="width: 250px;">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding ">
                        <table id="table" class="table table-hover ">
                            <tr>
                                <th>ID</th>
                                <th>Tiêu Đề</th>
                                <th>Tác Giả</th>
                                <th>Ngày Gửi</th>
                                <th>Chủ Đề</th>
                                <th>Trạng Thái</th>
                                <th>Select</th>
                            </tr>
                            <%BaiViet.forEach(function(item){%>
                                <tr>
                                    <td>
                                        <%=item.ID%>
                                    </td>
                                    <td>
                                        <%=item.TieuDe%>
                                    </td>
                                    <td>
                                        <%=item.TenDangNhap%>
                                    </td>
                                    <td>
                                        <%=item.GioDang%>
                                    </td>
                                    <td>
                                        <%=item.TenChuDe%>
                                    </td>
                                   
                                            <%if(item.TrangThai==1){%>
                                                <td><span class="label label-success ">Đã xuất bản</span></td>
                                                <%}else if(item.TrangThai==2){%>
                                                <td><span class="label label-primary ">Đã được duyệt & chờ xuất bản</span></td>
                                                <%}else if(item.TrangThai==3){%>
                                                    <td><span class="label label-warning ">Chưa được duyệt</span></td>
                                                    <%}else if(item.TrangThai==4){%>
                                                    <td><span class="label label-danger ">Bị từ chối</span></td>
                                                    <% }%>
                                   
                                    <td>
                                        <a href="/PV_BTV/duyetbaiviet/id=<%=item.ID%>" type="button" class="btn btn-success btn-fill">Duyệt</a>
                                    </td>
                                </tr>
                                <%})%>
                        </table>
                    </div>
                    <div class="col-xs-10"></div>
                   
                </div>

                <!-- /.box-body -->
            </div>

            <!-- /.box -->



        </div>
    </div>
    <% include footeradmin %>