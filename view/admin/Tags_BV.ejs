<% include headeradmin %>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Danh Sách Tags</h4>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <div class="row">
                            <div class="col-sm-10">
                                <div id="example1_filter" class="dataTables_filter"><label>Search:
                                        <input type="search" placeholder="" aria-controls="example1"></label></div>
                            </div>
                            <div class="col-sm-2">
                                <button onclick="document.getElementById('ThemTags').style.display='block'"
                                    type="button" rel="tooltip" title="Add" class="btn btn-simple btn-xs">
                                    Thêm<i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <table id="tableTags" class="table table-hover table-striped">
                            <thead>
                                <th>ID</th>
                                <th>Tên Tag</th>
                                <th>Xem Danh Sách</th>
                                <th>Xóa/Sửa</th>
                            </thead>

                            <tbody>
                                <%BaiViet.forEach(function(item){%>
                                <tr>
                                    <td><%=item.ID%></td>
                                    <td><%=item.TenTags%></td>
                                    <td><%=item.TieuDe%></td>
                                    <td>
                                        <a onclick="return confirm('Bạn Có Chắc Chắn Muốn Xóa')"
                                            href="/admin/deleteTags/<%=item.ID%>" type="button" rel="tooltip"
                                            title="Remove" class="btn btn-simple btn-xs">
                                            <i class="fa fa-times"></i>
                                        </a>
                                        <button id="btnSua"
                                            onclick="document.getElementById('SuaTags').style.display='block'"
                                            type="button" rel="tooltip" title="Edit Task" class="btn btn-simple btn-xs">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <%})%>
                            </tbody>
                        </table>
                        <div id="ThemTags" class="modal">
                            <div class="content">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <span onclick="document.getElementById('ThemTags').style.display='none'"
                                                    class="close" title="Close Modal">&times;</span>
                                                <div class="header">
                                                    <h4 class="title">Thêm</h4>
                                                </div>
                                                <div class="content">
                                                    <form action="/admin/addTenTags" method="post" novalidate
                                                        id="AddTags">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Tên Tags</label>
                                                                    <input type="text" class="form-control"
                                                                        name="addTenTags" placeholder="Tags">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Bài Viết Cần Thêm Tags</label>
                                                                    <select class="custom-select" name="IDBaiViet">
                                                                        <%BaiViet.forEach(function(item){%>
                                                                        <option value="<%=item.ID%>">
                                                                            <%=item.ID %>:<%=item.TieuDe%></option>
                                                                        <%})%>
                                                                    </select>
                                                                </div>

                                                            </div>
                                                        </div>
                                                        <button type="submit"
                                                            class="btn btn-info btn-fill pull-right">Thêm </button>
                                                        <div class="clearfix"></div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="SuaTags" class="modal">
                                <div class="content">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <span onclick="document.getElementById('SuaTags').style.display='none'"
                                                        class="close" title="Close Modal">&times;</span>
                                                    <div class="header">
                                                        <h4 class="title">Edit</h4>
                                                    </div>
                                                    <div class="content">
                                                        <form action="/admin/EditTenTags" method="post" novalidate
                                                            id="AddTags">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="form-group">
                                                                        <label>Tên Tags</label>
                                                                        <input type="text" class="form-control"
                                                                            name="EditTenTags" id="EditTenTags" placeholder="Tags">
                                                                            <input type="hidden" class="form-control"
                                                                            name="ID" id="ID" placeholder="Tags">
                                                                    </div>
                                                                   
                                                                </div>
                                                            </div>
                                                            <button type="submit"
                                                                class="btn btn-info btn-fill pull-right">Edit </button>
                                                            <div class="clearfix"></div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
    
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%include footeradmin%>