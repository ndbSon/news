<% include headeradmin %>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Danh Sách Tags</h4>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <div class="row">
                           
                            <div class="col-sm-2">
                                <button onclick="document.getElementById('ThemTags').style.display='block'"
                                    type="button" rel="tooltip" title="Add" class="btn btn-simple btn-xs">
                                    Thêm<i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <table id="table" class="table table-hover table-striped">
                            <thead>
                                <th>Tên Tag</th>
                                <th>Sửa</th>
                            </thead>

                            <tbody>
                                <%Tags.forEach(function(item){%>
                                <tr>
                                    <td><%=item.TenTags%></td>
                                    <td>
                                        <a id="btnSua" href="/admin/Tags/<%=item.TenTags%>"
                                            type="button" rel="tooltip" title="Edit Task" class="btn btn-simple btn-xs">
                                            <i class="fa fa-edit"></i>
                                    </a>
                                    </td>
                                </tr>
                                <%})%>
                            </tbody>
                        </table>
                        <div id="ThemTags" class="modal">
                            <div class="content">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <span onclick="document.getElementById('ThemTags').style.display='none'"
                                                    class="close" title="Close Modal">&times;</span>
                                                <div class="header">
                                                    <h4 class="title">Thêm</h4>
                                                </div>
                                                <div class="content">
                                                    <form action="/admin/addTenTags" method="post" novalidate
                                                        id="AddTags">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Tên Tags</label>
                                                                    <input type="text" class="form-control"
                                                                        name="addTenTags" placeholder="Tags">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Bài Viết Cần Thêm Tags</label>
                                                                    <select class="custom-select" name="IDBaiViet">
                                                                        <%BaiViet.forEach(function(item){%>
                                                                        <option value="<%=item.ID%>">
                                                                            <%=item.ID %>:<%=item.TieuDe%></option>
                                                                        <%})%>
                                                                    </select>
                                                                </div>

                                                            </div>
                                                        </div>
                                                        <button type="submit"
                                                            class="btn btn-info btn-fill pull-right">Thêm </button>
                                                        <div class="clearfix"></div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%include footeradmin%>