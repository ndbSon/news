<%include headeradmin%>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Edit Bài Viết</h4>
                        </div>
                        <div class="content">
                            <form action="/PV_BTV/postbaiviet" method="POST">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Tiêu Đề</label>

                                            <input type="text" name="TieuDe" class="form-control" placeholder="Tiêu Đề" <%if(info){%> value="<%=info.TieuDe%>"<% }%> required>
                                                    <input type="hidden" name="ID" class="form-control" placeholder="Tiêu Đề" <%if(info){%> value="<%=info.ID%>"<% }%>>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Tóm Tắt</label>
                                            <textarea rows="5" name="TomTat" class="form-control" placeholder="Tóm tắt Nội Dung"><%if(info){%><%=info.TomTat%><% }%></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Ảnh Đại Diện</label>
                                            <input type="text" name="AnhDaiDien" class="form-control" placeholder="http://" <%if(info){%> value="<%=info.AnhDaiDien%>"<%}%> required>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Nội Dung</label>
                                            <textarea rows="30" name="NoiDung" class="form-control" placeholder="Nội Dung"><%if(info){%><%=info.NoiDung%><% }%></textarea>
                                            <script>
                                                // Replace the <textarea id="editor1"> with a CKEditor
                                                // instance, using default configuration.
                                                CKEDITOR.replace('NoiDung');
                                            </script>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <h3>Chủ Đề</h3>
                                            <select class="form-control select2" name="ChuDe" style="width: 100%;">
                                            <%ChuDe.forEach(function(item){%>
                                            <%if(info){%>
                                            <%if(item.TenChuDe==info.ChuDe){%>
                                            <option selected><%=item.TenChuDe%></option>
                                            <%}%>
                                                           <% }%>

                                            <option><%=item.TenChuDe%></option>
                                            <% })%>

                                        </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h3>
                                            Tags
                                        </h3>
                                        <ul id="myULTags">
                                            <!-- Existing list items will be pre-added to the tags. -->
                                            <%Tags.forEach(function(item){%>
                                                <li>
                                                    <%=item.TenTags%>
                                                </li>
                                                <% })%>

                                        </ul>

                                    </div>
                                </div>
                                <%if(info){%>
                                <%if(info.TuChoi!=" "||info.TuChoi!=null){%>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h3>
                                                Lí Do Từ Chối
                                            </h3>
                                            <input disabled type="text" class="form-control" <%if(info){%> value="<%=info.TuChoi%>"<% }%> >
    
                                        </div>
                                    </div>
                               <% }%>
                               <% }%>
                             
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3>
                                            Chế Độ
                                        </h3>
                                        <select class="form-control select2" name="CheDo" style="width: 100%;">
                                            <option selected value="2">Normal</option>
                                            <option value="1">Premium</option>
                                        </select>

                                    </div>
                                </div>



                                <button type="submit" class="btn btn-info btn-fill pull-right">Update
                                Profile</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    </div>
    <%include footeradmin%>